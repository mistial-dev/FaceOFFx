{
  "threshold": 3,
  "reporters": ["html", "markdown"],
  "ignore": [
    "**/node_modules/**",
    "**/.git/**",
    "**/.rbenv/**",
    "**/.venv/**",
    "**/*cache*/**",
    "**/.github/**",
    "**/.idea/**",
    "**/report/**",
    "**/*.svg",
    "**/bin/**",
    "**/obj/**",
    "**/artifacts/**"
  ],
  "minLines": 10,
  "minTokens": 50
}
