<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <PackageId>FaceOFFx</PackageId>
    <IsPackable>true</IsPackable>
    <IncludeBuildOutput>true</IncludeBuildOutput>
    <SuppressDependenciesWhenPacking>true</SuppressDependenciesWhenPacking>
    <Description>PIV-compliant facial processing library for .NET with FIPS 201-3 compliance and JPEG 2000 ROI encoding</Description>
    <Version>1.0.1</Version>
    <Authors>FaceOFFx Contributors</Authors>
    <Company>FaceOFFx</Company>
    <Product>FaceOFFx</Product>
    <Copyright>Copyright Â© 2024 FaceOFFx Contributors</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/mistial-dev/FaceOFFx</PackageProjectUrl>
    <RepositoryUrl>https://github.com/mistial-dev/FaceOFFx</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>face-recognition;face-detection;facial-landmarks;piv;jpeg2000;fips201;onnx;machine-learning;computer-vision</PackageTags>
    <PackageIcon>icon.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <GenerateDocumentationFile>false</GenerateDocumentationFile>
  </PropertyGroup>

  <!-- Reference all projects that should be included in the package -->
  <ItemGroup>
    <ProjectReference Include="..\FaceOFFx.Core\FaceOFFx.Core.csproj" PrivateAssets="all" />
    <ProjectReference Include="..\FaceOFFx.Infrastructure\FaceOFFx.Infrastructure.csproj" PrivateAssets="all" />
    <ProjectReference Include="..\FaceOFFx.Models\FaceOFFx.Models.csproj" PrivateAssets="all" />
  </ItemGroup>

  <!-- Include all assemblies from referenced projects -->
  <PropertyGroup>
    <TargetsForTfmSpecificBuildOutput>$(TargetsForTfmSpecificBuildOutput);CopyProjectReferencesToPackage</TargetsForTfmSpecificBuildOutput>
  </PropertyGroup>

  <Target Name="CopyProjectReferencesToPackage" DependsOnTargets="BuildOnlySettings;ResolveReferences">
    <ItemGroup>
      <!-- Include all DLLs from project references -->
      <BuildOutputInPackage Include="@(ReferenceCopyLocalPaths->'%(FullPath)')" Condition="'%(ReferenceCopyLocalPaths.ReferenceSourceTarget)' == 'ProjectReference' and '%(Extension)' == '.dll'" />
      <!-- Include XML documentation files -->
      <BuildOutputInPackage Include="@(ReferenceCopyLocalPaths->'%(FullPath)')" Condition="'%(ReferenceCopyLocalPaths.ReferenceSourceTarget)' == 'ProjectReference' and '%(Extension)' == '.xml'" />
    </ItemGroup>
  </Target>

  <!-- Include ONNX models as content files -->
  <ItemGroup>
    <Content Include="..\FaceOFFx.Models\Resources\*.onnx" Pack="true" PackagePath="contentFiles\any\any\Resources\" CopyToOutputDirectory="PreserveNewest" BuildAction="Content" />
  </ItemGroup>

  <!-- Include icon and readme -->
  <ItemGroup>
    <None Include="..\..\icon.png" Pack="true" PackagePath="" Condition="Exists('..\..\icon.png')" />
    <None Include="..\..\README.md" Pack="true" PackagePath="" Condition="Exists('..\..\README.md')" />
  </ItemGroup>

</Project>